{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "outDir": "dist/main",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2017",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",

    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  },
  "typedocOptions": {
    "excludeExternals": true
  }
}
